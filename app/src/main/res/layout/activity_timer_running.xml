<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerRunningActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="beep volume" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="93dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextureView
                android:id="@+id/textureView1"
                android:layout_width="wrap_content"
                android:layout_height="5dp" />
            <TextureView
                android:id="@+id/textureView2"
                android:layout_width="wrap_content"
                android:layout_height="5dp" />
            <TextureView
                android:id="@+id/textureView3"
                android:layout_width="wrap_content"
                android:layout_height="5dp" />
            <TextureView
                android:id="@+id/textureView4"
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageWorkout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/ic_fitness_center_24px" />

            <ImageView
                android:id="@+id/imageDone"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/ic_done_24px" />

            <ImageView
                android:id="@+id/imageSwitch"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/ic_transfer_within_a_station_24px" />

        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
v
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:text="sets"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/setsRemainaingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center_horizontal|top"
                    android:text="10"
                    android:textSize="110sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="seconds"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/currentTimeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center_horizontal|top"
                    android:text="70"
                    android:textSize="110sp" />

            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="120dp">

            <ImageButton
                android:id="@+id/imageButtonPause"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_pause_24px" />

            <ImageButton
                android:id="@+id/imageButtonPlay"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_play_arrow_24px" />

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>