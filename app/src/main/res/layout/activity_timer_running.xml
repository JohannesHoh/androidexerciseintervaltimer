<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerRunningActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="beep volume"
            android:gravity="center_horizontal"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="93dp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageWorkout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/ic_fitness_center_24px" />

            <ImageView
                android:id="@+id/imageDone"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/ic_done_24px" />

            <ImageView
                android:id="@+id/imageSwitch"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_transfer_within_a_station_24px" />

        </FrameLayout>

        <TextView
            android:id="@+id/currentTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="70"
            android:textSize="110sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="120dp">

            <ImageButton
                android:id="@+id/imageButtonPause"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_pause_24px" />

            <ImageButton
                android:id="@+id/imageButtonPlay"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_play_arrow_24px" />

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>