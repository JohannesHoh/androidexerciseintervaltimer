<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerRunningActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/fragment"
            android:name="com.github.johanneshoh.androidexerciseintervaltimer.TimerRunning1Fragment"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <fragment
            android:id="@+id/fragment2"
            android:name="com.github.johanneshoh.androidexerciseintervaltimer.TimerRunning2Fragment"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>